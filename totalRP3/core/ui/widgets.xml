			<Layer level="BORDER">
				<Texture parentKey="ArrowGlowUP" inherits="HelpPlateArrow-GlowDOWN" hidden="true"
					alphaMode="ADD" alpha="0.5">
					<Size x="53" y="21" />
					<Anchors>
						<Anchor point="TOP" relativePoint="BOTTOM" x="0" y="3" />
