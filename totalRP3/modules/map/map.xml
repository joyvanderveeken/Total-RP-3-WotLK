	<Button name="TRP3_WorldMapButton" parent="WorldMapButton" inherits="TRP3_SimpleIconButton" frameStrata="HIGH">
		<Size x="40" y="40"/>
		<Anchors>
			<Anchor point="BOTTOMLEFT" x="10" y="10"/>
		</Anchors>
		<Scripts>
			<OnLoad>
				self.delayTimer = 0;
				self:RegisterEvent("WORLD_MAP_UPDATE");
			</OnLoad>
			<!-- <OnUpdate>
				if not self.eventRegistered and self.delayTimer then
					self.delayTimer = self.delayTimer + 1;
					if self.delayTimer > 30 then Wait ~0.5 seconds (30 frames)
						self:RegisterEvent("WORLD_MAP_UPDATE");
						self.eventRegistered = true;
						self.delayTimer = nil;
						self:SetScript("OnUpdate", nil);
					end
				end
			</OnUpdate> -->
			<OnEvent>
				if event == "WORLD_MAP_UPDATE" then
					if WorldMapFrame:IsShown() then
						self:Show();
					else
						self:Hide();
					end
				end
			</OnEvent>
			<OnEnter>
				WorldMapPOIFrame.allowBlobTooltip = false;
				WorldMapTooltip:Hide();
				WorldMapTooltip:SetOwner(self, "ANCHOR_RIGHT",0,0);
				WorldMapTooltip:AddLine(self.title, 1, 1, 1,true);
				WorldMapTooltip:AddLine(self.subtitle, 1, 1, 1,true);
				WorldMapTooltip:Show();
			</OnEnter>
			<OnLeave>
				WorldMapTooltip:Hide();
			</OnLeave>
		</Scripts>
	</Button>

