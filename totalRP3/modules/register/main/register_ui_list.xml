					</Frame>

					<!-- Characters filters -->
					<Frame name="TRP3_RegisterListCharactFilter" inherits="TRP3_FieldSetFrame">
						<Size x="0" y="50" />
						<Anchors>
							<Anchor point="BOTTOMLEFT" x="8" y="8" />
							<Anchor point="BOTTOMRIGHT" x="-8" y="8" />
						</Anchors>
						<Frames>
							<EditBox name="TRP3_RegisterListFilterCharactName" inherits="TRP3_TitledEditBox">
