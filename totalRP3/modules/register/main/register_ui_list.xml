	<Frame name="TRP3_RegisterListLine" virtual="true">
		<Size x="0" y="22" />
		<Layers>
			<Layer level="BACKGROUND">
				<Texture alphaMode="BLEND" file="Interface\ACHIEVEMENTFRAME\UI-Achievement-Title">
					<Size x="0" y="20" />
					<Anchors>
						<Anchor point="LEFT" x="0" y="0" />
						<Anchor point="RIGHT" x="0" y="0" />
					</Anchors>
					<TexCoords top="0.40625" bottom="0.60125" left="0" right="1" />
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parentName" inherits="GameFontNormal" justifyH="LEFT" text="[Characters name]">
					<Size x="180" y="10" />
					<Anchors>
						<Anchor point="LEFT" x="30" y="0" />
					</Anchors>
					<Color r="0.95" g="0.75" b="0.10" />
				</FontString>
				<FontString name="$parentInfo" inherits="GameFontNormal" justifyH="LEFT" text="[Info ?]">
					<Size x="110" y="10" />
					<Anchors>
						<Anchor point="LEFT" x="15" y="0" relativePoint="RIGHT" relativeTo="$parentName" />
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95" />
				</FontString>
				<FontString name="$parentInfo2" inherits="GameFontNormal" justifyH="CENTER" text="[Info ?]">
					<Size x="0" y="10" />
					<Anchors>
						<Anchor point="LEFT" x="15" y="0" relativePoint="RIGHT" relativeTo="$parentInfo" />
						<Anchor point="RIGHT" x="-15" y="0" />
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95" />
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentClick">
				<Size x="180" y="22" />
				<Anchors>
					<Anchor point="LEFT" x="25" y="0" />
				</Anchors>
				<HighlightTexture alphaMode="ADD" file="Interface\FriendsFrame\UI-FriendsFrame-HighlightBar">
					<TexCoords bottom="0" left="0.25" top="1" right="1" />
				</HighlightTexture>
				<Scripts>
					<OnEnter>
						TRP3_RefreshTooltipForFrame(self);
					</OnEnter>
					<OnLeave>
						TRP3_MainTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Button>
			<Button name="$parentClickMiddle">
				<Size x="110" y="22" />
				<Anchors>
					<Anchor point="LEFT" x="15" y="0" relativePoint="RIGHT" relativeTo="$parentClick" />
				</Anchors>
				<Scripts>
					<OnEnter>
						TRP3_RefreshTooltipForFrame(self);
					</OnEnter>
					<OnLeave>
						TRP3_MainTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Button>
			<Button name="$parentClickRight">
				<Size x="0" y="22" />
				<Anchors>
					<Anchor point="LEFT" x="15" y="0" relativePoint="RIGHT" relativeTo="$parentClickMiddle" />
					<Anchor point="RIGHT" x="-15" y="0" />
				</Anchors>
				<Scripts>
					<OnEnter>
						TRP3_RefreshTooltipForFrame(self);
					</OnEnter>
					<OnLeave>
						TRP3_MainTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Button>
			<CheckButton name="$parentSelect" inherits="TRP3_CheckBox" checked="false">
				<Anchors>
					<Anchor point="LEFT" x="0" y="0" />
				</Anchors>
				<HitRectInsets>
					<AbsInset left="0" right="0" top="0" bottom="0" />
				</HitRectInsets>
			</CheckButton>
		</Frames>
	</Frame>

	<Frame name="TRP3_RegisterList" hidden="true">
		<Backdrop edgeFile="Interface\GLUES\COMMON\TextPanel-Border" bgFile="Interface\ACHIEVEMENTFRAME\UI-GuildAchievement-Parchment-Horizontal-Desaturated" tile="true">
			<EdgeSize>
				<AbsValue val="24" />
			</EdgeSize>
			<BackgroundInsets left="5" right="5" top="5" bottom="5" />
			<TileSize val="425" />
		</Backdrop>
		<Layers>
			<Layer level="OVERLAY">

			</Layer>
		</Layers>
		<Frames>
			<Frame name="TRP3_RegisterListContainer">
				<Backdrop edgeFile="Interface\GLUES\COMMON\TextPanel-Border">
					<EdgeSize>
						<AbsValue val="32" />
					</EdgeSize>
				</Backdrop>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture file="Interface\ACHIEVEMENTFRAME\UI-Achievement-StatsBackground">
							<Size x="506" y="0" />
							<Anchors>
								<Anchor point="TOPRIGHT" x="-4" y="0" />
								<Anchor point="BOTTOMRIGHT" x="-4" y="0" />
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<FontString name="TRP3_RegisterListEmpty" inherits="GameFontNormalLarge" justifyH="LEFT" text="[EMPTY]">
							<Size x="0" y="10" />
							<Anchors>
								<Anchor point="CENTER" x="0" y="30" />
							</Anchors>
							<Color r="0.95" g="0.95" b="0.95" />
						</FontString>
					</Layer>
				</Layers>
				<Size x="0" y="0" />
				<Anchors>
					<Anchor point="TOPLEFT" x="5" y="-35" />
					<Anchor point="TOPRIGHT" x="-5" y="-35" />
					<Anchor point="BOTTOMLEFT" x="5" y="8" />
					<Anchor point="BOTTOMRIGHT" x="-5" y="8" />
				</Anchors>
				<Frames>
					<Slider name="TRP3_RegisterListSlider" inherits="OptionsSliderTemplate">
						<Size x="15" y="310" />
						<Anchors>
							<Anchor point="TOPRIGHT" x="-10" y="-40" />
						</Anchors>
						<Scripts>
							<OnLoad>
								TRP3_RegisterListSliderText:SetText("");
								TRP3_RegisterListSliderHigh:SetText("");
								TRP3_RegisterListSliderLow:SetText("");
								self:SetMinMaxValues(0, 6);
								self:SetValueStep(1);
								self:SetOrientation("VERTICAL");
							</OnLoad>
						</Scripts>
					</Slider>
					<Frame name="TRP3_RegisterListHeader">
						<Size x="0" y="22" />
						<Anchors>
							<Anchor point="TOPLEFT" x="15" y="-15" />
							<Anchor point="TOPRIGHT" x="-10" y="-15" />
						</Anchors>
						<Layers>
							<Layer level="BACKGROUND">
								<Texture alphaMode="BLEND" file="Interface\ACHIEVEMENTFRAME\UI-Achievement-Title">
									<Size x="0" y="23" />
									<Anchors>
										<Anchor point="LEFT" x="0" y="0" />
										<Anchor point="RIGHT" x="0" y="0" />
									</Anchors>
									<TexCoords top="0.0" bottom="0.335" left="0" right="1" />
								</Texture>
							</Layer>
							<Layer level="OVERLAY">
								<FontString name="TRP3_RegisterListHeaderName" inherits="GameFontNormal" justifyH="LEFT" text="[Characters name]">
									<Size x="180" y="10" />
									<Anchors>
										<Anchor point="LEFT" x="30" y="0" />
									</Anchors>
									<Color r="0.95" g="0.95" b="0.95" />
								</FontString>
								<FontString name="TRP3_RegisterListHeaderInfo" inherits="GameFontNormal" justifyH="LEFT" text="[Info ?]">
									<Size x="110" y="10" />
									<Anchors>
										<Anchor point="LEFT" x="15" y="0" relativePoint="RIGHT" relativeTo="$parentName" />
									</Anchors>
									<Color r="0.95" g="0.95" b="0.95" />
								</FontString>
								<FontString name="TRP3_RegisterListHeaderInfo2" inherits="GameFontNormal" justifyH="CENTER" text="[Info ?]">
									<Size x="0" y="10" />
									<Anchors>
										<Anchor point="LEFT" x="15" y="0" relativePoint="RIGHT" relativeTo="$parentInfo" />
										<Anchor point="RIGHT" x="-15" y="0" />
									</Anchors>
									<Color r="0.95" g="0.95" b="0.95" />
								</FontString>
							</Layer>
						</Layers>
						<Frames>
							<Button name="TRP3_RegisterListHeaderNameTT" inherits="TRP3_InvisibleButton">
								<Size x="180" y="20" />
								<Anchors>
									<Anchor point="LEFT" x="30" y="0" />
								</Anchors>
								<Scripts>
									<OnEnter>
										TRP3_RegisterListHeaderName:SetTextColor(0.95, 0.75, 0);
									</OnEnter>
									<OnLeave>
										TRP3_RegisterListHeaderName:SetTextColor(0.95, 0.95, 0.95);
									</OnLeave>
								</Scripts>
							</Button>
							<Button name="TRP3_RegisterListHeaderInfoTT" inherits="TRP3_InvisibleButton">
								<Size x="110" y="20" />
								<Anchors>
									<Anchor point="LEFT" x="15" y="0" relativePoint="RIGHT" relativeTo="$parentName" />
								</Anchors>
								<Scripts>
									<OnEnter>
										TRP3_RegisterListHeaderInfo:SetTextColor(0.95, 0.75, 0);
									</OnEnter>
									<OnLeave>
										TRP3_RegisterListHeaderInfo:SetTextColor(0.95, 0.95, 0.95);
									</OnLeave>
								</Scripts>
							</Button>
							<Button name="TRP3_RegisterListHeaderActions" inherits="TRP3_ActionButton">
								<Anchors>
									<Anchor point="LEFT" x="-3" y="0" />
								</Anchors>
							</Button>
						</Frames>
					</Frame>
					<Frame name="TRP3_RegisterListLine1" inherits="TRP3_RegisterListLine">
						<Anchors>
							<Anchor point="TOPLEFT" x="0" y="0" relativePoint="BOTTOMLEFT" relativeTo="TRP3_RegisterListHeader" />
							<Anchor point="TOPRIGHT" x="0" y="0" relativePoint="BOTTOMRIGHT" relativeTo="TRP3_RegisterListHeader" />
						</Anchors>
					</Frame>
					<Frame name="TRP3_RegisterListLine2" inherits="TRP3_RegisterListLine">
						<Anchors>
							<Anchor point="TOPLEFT" x="0" y="0" relativePoint="BOTTOMLEFT" relativeTo="TRP3_RegisterListLine1" />
							<Anchor point="TOPRIGHT" x="0" y="0" relativePoint="BOTTOMRIGHT" relativeTo="TRP3_RegisterListLine1" />
						</Anchors>
					</Frame>
					<Frame name="TRP3_RegisterListLine3" inherits="TRP3_RegisterListLine">
